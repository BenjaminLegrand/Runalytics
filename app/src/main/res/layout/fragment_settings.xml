<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/fragment_settings_dark_mode_label"
        style="@style/Theme.Runalytics.SettingsItem"
        android:layout_width="0dp"
        android:text="@string/settings_dark_mode_label"
        app:layout_constraintEnd_toStartOf="@id/fragment_settings_dark_mode_switch"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/fragment_settings_dark_mode_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/settings_item_margin"
        android:theme="@style/Theme.Runalytics.Switch"
        app:layout_constraintBottom_toBottomOf="@id/fragment_settings_dark_mode_label"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/fragment_settings_dark_mode_label"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/fragment_settings_dark_mode_divider"
        style="@style/Theme.Runalytics.Divider"
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_settings_dark_mode_label" />

</androidx.constraintlayout.widget.ConstraintLayout>
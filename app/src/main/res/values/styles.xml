<resources>

    <!-- Base light theme. -->
    <style name="LightTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorOnPrimary">@color/light_color_primary</item>

        <item name="colorPrimaryDark">@color/light_gray</item>

        <item name="android:colorBackground">@color/light_background</item>

        <item name="colorAccent">@color/light_color_accent</item>
        <item name="colorOnAccent">@color/white</item>

        <item name="primaryTextColor">@android:color/primary_text_light</item>
        <item name="secondaryTextColor">@android:color/secondary_text_light</item>

        <item name="dividerColor">@color/light_separator_color</item>
        <item name="errorColor">@color/base_error_color</item>

        <item name="buttonStyle">@style/Theme.Runalytics.Button</item>
        <item name="toolbarStyle">@style/Theme.Runalytics.Toolbar</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/dark_color_primary</item>
        <item name="colorOnPrimary">@color/white</item>

        <item name="colorPrimaryDark">@color/dark_color_primary_dark</item>

        <item name="android:colorBackground">@color/dark_background</item>

        <item name="colorAccent">@color/light_color_accent</item>
        <item name="colorOnAccent">@color/white</item>

        <item name="primaryTextColor">@android:color/primary_text_dark</item>
        <item name="secondaryTextColor">@android:color/secondary_text_dark</item>

        <item name="dividerColor">@color/dark_separator_color</item>
        <item name="errorColor">@color/base_error_color</item>

        <item name="buttonStyle">@style/Theme.Runalytics.Button</item>
        <item name="toolbarStyle">@style/Theme.Runalytics.Toolbar</item>
    </style>

    <!--  Themes/Styles  -->
    <style name="Theme.Runalytics.Button" parent="Widget.AppCompat.Button">
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="Theme.Runalytics.Switch" parent="Widget.AppCompat.CompoundButton.Switch">
        <item name="colorAccent">?attr/colorAccent</item>
    </style>

    <style name="Theme.Runalytics.Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="titleTextColor">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
    </style>

    <style name="Theme.Runalytics.Divider" parent="Theme.AppCompat">
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">?attr/dividerColor</item>
    </style>

    <style name="Theme.Runalytics.SettingsItem" parent="Theme.AppCompat">
        <item name="android:layout_height">@dimen/settings_item_height</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/settings_item_margin</item>
        <item name="android:layout_marginEnd">@dimen/settings_item_margin</item>
        <item name="android:textAppearance">@style/TextAppearance.Runalytics.Text.Large</item>
    </style>

    <!--  TextAppearances -->
    <style name="TextAppearance.Runalytics.Text.Large" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/large_text_size</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <style name="TextAppearance.Runalytics.Text.Large.Error">
        <item name="android:textColor">?attr/errorColor</item>
    </style>

    <style name="TextAppearance.Runalytics.Text.Medium" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/medium_text_size</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="TexteAppearance.Runalytics.Text.Small" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/small_text_size</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
    </style>

    <style name="TextAppearance.Runalytics.Text.Headline" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/headline_text_size</item>
        <item name="android:textColor">?attr/primaryTextColor</item>
        <item name="android:fontFamily">sans-serif-black</item>
    </style>


</resources>
